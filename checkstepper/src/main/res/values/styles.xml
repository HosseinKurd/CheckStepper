<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CheckStepper">
        <attr name="lineWidth" format="dimension"/>
        <attr name="badgeCircleRadius" format="dimension"/>
        <attr name="showAboveLine" format="boolean"/>
        <attr name="showBelowLine" format="boolean"/>
        <attr name="belowLineCompleted" format="enum">
            <enum name="COMPLETED" value="0"/>
            <enum name="INCOMPLETED" value="1"/>
            <enum name="UNCOMPLETED" value="2"/>
        </attr>
        <attr name="aboveLineCompleted" format="enum">
            <enum name="COMPLETED" value="0"/>
            <enum name="INCOMPLETED" value="1"/>
            <enum name="UNCOMPLETED" value="2"/>
        </attr>
        <attr name="circleCompleted" format="enum">
            <enum name="COMPLETED" value="0"/>
            <enum name="INCOMPLETED" value="1"/>
            <enum name="UNCOMPLETED" value="2"/>
        </attr>
        <attr name="showCompletedText" format="boolean"/>
        <attr name="title" format="string|reference"/>
        <attr name="stateTitle" format="string|reference"/>
    </declare-styleable>
</resources>